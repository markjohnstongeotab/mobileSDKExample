<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outside_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_marginTop="50dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnstarthos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show/Hide Drive"
        app:layout_constraintStart_toStartOf="@id/outside_layout"
        app:layout_constraintTop_toTopOf="@id/outside_layout" />
    <TextView
        android:id="@+id/txthoslabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Duty"
        android:layout_marginStart="10px"
        android:layout_marginEnd="10px"
        app:layout_constraintStart_toEndOf="@id/btnstarthos"
        app:layout_constraintTop_toTopOf="@+id/btnstarthos"
        />
    <TextView
        android:id="@+id/txthos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10px"
        android:layout_marginEnd="10px"

        app:layout_constraintStart_toEndOf="@id/txthoslabel"
        app:layout_constraintTop_toTopOf="@+id/btnstarthos"
        />

    <TextView
        android:id="@+id/txtdrivinglabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driving"
        android:layout_marginStart="10px"
        android:layout_marginEnd="10px"
        app:layout_constraintStart_toEndOf="@id/btnstarthos"
        app:layout_constraintTop_toBottomOf="@+id/txthoslabel"
        />
    <TextView
        android:id="@+id/txtdriving"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10px"
        android:layout_marginEnd="10px"

        app:layout_constraintStart_toEndOf="@id/txtdrivinglabel"
        app:layout_constraintTop_toBottomOf="@+id/txthos"
        />
</androidx.constraintlayout.widget.ConstraintLayout>